---
const sizes = {
  md: 'px-3 py-1',
  lg: 'px-4 py-2',
}

const { size = 'md', type = 'button', color = 'dark/light', className, ...props } = Astro.props
---

<button
  type={type}
  class:list={[
    'inline-flex shrink-0 items-center justify-center gap-1 rounded-full text-sm/7 font-medium',
    color === 'dark/light' && 'bg-mist-950 text-white hover:bg-mist-800 dark:bg-mist-300 dark:text-mist-950 dark:hover:bg-mist-200',
    color === 'light' && 'bg-white text-mist-950 hover:bg-mist-100 dark:bg-mist-100 dark:hover:bg-white',
    sizes[size],
    className,
  ]}
  {...props}
><slot /></button>