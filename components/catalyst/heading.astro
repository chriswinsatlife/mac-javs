---
export interface Props {
  level?: 1 | 2 | 3 | 4 | 5 | 6
  className?: string
  [key: string]: any
}

const { level = 1, className, ...props } = Astro.props
const Element = `h${level}` as const
const computedClass = ((className || '') + ' text-2xl/8 font-semibold text-zinc-950 sm:text-xl/8 dark:text-white').trim()
---

<Element class={computedClass} {...props}><slot /></Element>