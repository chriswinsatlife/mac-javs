---
import type { HTMLAttributes } from 'astro/types'

export interface Props extends HTMLAttributes<'hr'> {
  soft?: boolean
}

const { soft = false, className, ...props } = Astro.props
---

<hr
  role="presentation"
  {...props}
  class:list={[
    className,
    'w-full border-t',
    soft ? 'border-zinc-950/5 dark:border-white/5' : 'border-zinc-950/10 dark:border-white/10'
  ]}
/>