---
export interface Props {
  level?: 1 | 2 | 3 | 4 | 5 | 6
  className?: string
  [key: string]: any
}

const { level = 2, className, ...props } = Astro.props
const Element = `h${level}` as const
const computedClass = ((className || '') + ' text-base/7 font-semibold text-zinc-950 sm:text-sm/6 dark:text-white').trim()
---

<Element class={computedClass} {...props}><slot /></Element>