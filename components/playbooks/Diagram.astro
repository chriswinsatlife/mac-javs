---
type Props = {
  src: string;
  alt: string;
  title?: string;
  caption?: string;
  cssHref?: string;
};

const {
  src,
  alt,
  title,
  caption,
  cssHref,
} = Astro.props;

if (!src || !src.startsWith('/')) {
  throw new Error(`Diagram: src must be a site-root path like /playbooks/... (got: ${src})`);
}

if (!/\.svg$/i.test(src)) {
  throw new Error(`Diagram: src must be an .svg (got: ${src})`);
}
const dialogId = `diagram__${Math.random().toString(36).slice(2, 9)}`;
---

<figure class="playbook-diagram">
  {title && <figcaption class="playbook-diagram__title">{title}</figcaption>}
  <div class="playbook-diagram__frame">
    <button class="playbook-diagram__fs" type="button" data-diagram-fs={dialogId} aria-label="View diagram full screen">
      Full screen
    </button>
    <div class="playbook-diagram__svg" role="img" aria-label={alt} data-diagram-src={src} data-diagram-css={cssHref ?? ''}></div>
    <dialog id={dialogId} class="playbook-diagram__dialog">
      <div class="playbook-diagram__dialog_bar">
        <div class="playbook-diagram__dialog_title">Diagram</div>
        <form method="dialog">
          <button class="playbook-diagram__dialog_close" aria-label="Close full screen" type="submit">Close</button>
        </form>
      </div>
      <div class="playbook-diagram__dialog_stage" data-diagram-stage></div>
    </dialog>
  </div>
  {caption && <figcaption class="playbook-diagram__caption">{caption}</figcaption>}
</figure>

<script is:inline define:vars={{ dialogId }}>
  (async () => {
    const btn = document.querySelector(`[data-diagram-fs="${dialogId}"]`);
    const dialog = document.getElementById(dialogId);
    const stage = dialog?.querySelector('[data-diagram-stage]');
    const frame = btn?.closest('.playbook-diagram__frame');
    const svgWrap = frame?.querySelector('.playbook-diagram__svg');
    const src = svgWrap?.getAttribute('data-diagram-src');
    if (!svgWrap || !src) return;

    // Optional per-diagram stylesheet.
    const css = svgWrap.getAttribute('data-diagram-css');
    if (css && !document.querySelector(`link[data-diagram-css="${css}"]`)) {
      const link = document.createElement('link');
      link.rel = 'stylesheet';
      link.href = css;
      link.dataset.diagramCss = css;
      document.head.appendChild(link);
    }

    try {
      const res = await fetch(src);
      if (!res.ok) throw new Error(`Failed to fetch SVG: ${src}`);
      const svgText = await res.text();
      svgWrap.innerHTML = svgText;
    } catch (e) {
      console.error(e);
      return;
    }

    const svg = svgWrap.querySelector('svg');
    if (!btn || !dialog || !stage || !svg || !dialog.showModal) return;

    btn.addEventListener('click', () => {
      stage.innerHTML = '';
      const clone = svg.cloneNode(true);
      clone.removeAttribute('id');
      clone.style.width = '100%';
      clone.style.height = '100%';
      stage.appendChild(clone);
      dialog.showModal();
    });

    dialog.addEventListener('close', () => {
      stage.innerHTML = '';
    });
  })().catch((e) => console.error(e));
</script>

<style>
  @font-face{
    font-family: 'Figtree';
    src: url('/fonts/Figtree[wght].ttf') format('truetype');
    font-weight: 300 900;
    font-style: normal;
    font-display: swap;
  }
  @font-face{
    font-family: 'Figtree';
    src: url('/fonts/Figtree-Italic[wght].ttf') format('truetype');
    font-weight: 300 900;
    font-style: italic;
    font-display: swap;
  }

  .playbook-diagram{
    margin: 1.25rem 0;
  }
  .playbook-diagram__title{
    font-weight: 650;
    margin: 0 0 0.5rem 0;
  }
  .playbook-diagram__frame{
    border: 1px solid rgba(0,0,0,0.08);
    border-radius: 12px;
    background: #fff;
    overflow: hidden;
    --diagram-font-family: 'Figtree', ui-sans-serif, system-ui, -apple-system, 'Segoe UI', Arial, sans-serif;
    --diagram-node-fill: #f6fbf7;
    --diagram-node-stroke: #05240C;
    --diagram-node-stroke-width: 2;
    --diagram-edge-stroke: rgba(0,0,0,0.55);
    --diagram-edge-stroke-width: 1.6;
    --diagram-label-fill: rgba(0,0,0,0.86);
    position: relative;
  }
  .playbook-diagram__svg :global(svg){
    display: block;
    width: 100%;
    height: auto;
  }

  .playbook-diagram__fs{
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 2;
    font-size: 12px;
    font-weight: 650;
    letter-spacing: -0.01em;
    color: rgba(0,0,0,0.62);
    background: rgba(255,255,255,0.84);
    border: 1px solid rgba(0,0,0,0.10);
    border-radius: 999px;
    padding: 6px 10px;
    cursor: pointer;
    backdrop-filter: blur(8px);
  }
  .playbook-diagram__fs:hover{ background: rgba(255,255,255,0.94); color: rgba(0,0,0,0.74); }
  .playbook-diagram__caption{
    margin: 0.5rem 0 0 0;
    color: rgba(0,0,0,0.72);
    font-size: 0.95rem;
  }

  .playbook-diagram__dialog{
    width: 100vw;
    height: 100vh;
    max-width: none;
    max-height: none;
    padding: 0;
    border: none;
    background: rgba(255,255,255,0.98);
  }
  .playbook-diagram__dialog::backdrop{ background: rgba(0,0,0,0.45); }

  .playbook-diagram__dialog_bar{
    position: sticky;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    padding: 14px 16px;
    border-bottom: 1px solid rgba(0,0,0,0.08);
    background: rgba(255,255,255,0.96);
    backdrop-filter: blur(10px);
  }
  .playbook-diagram__dialog_title{
    font-size: 13px;
    font-weight: 700;
    color: rgba(0,0,0,0.66);
  }
  .playbook-diagram__dialog_close{
    font-size: 12px;
    font-weight: 700;
    color: rgba(0,0,0,0.66);
    background: rgba(0,0,0,0.04);
    border: 1px solid rgba(0,0,0,0.10);
    border-radius: 999px;
    padding: 6px 10px;
    cursor: pointer;
  }
  .playbook-diagram__dialog_close:hover{ background: rgba(0,0,0,0.06); }

  .playbook-diagram__dialog_stage{
    height: calc(100vh - 54px);
    padding: 18px;
    overflow: hidden;
  }
  .playbook-diagram__dialog_stage > svg{
    width: 100%;
    height: 100%;
    display: block;
  }
</style>
