---
import { clsx } from 'clsx/lite'
import Section from '../elements/section.astro'

const { stat, text, className, ...props } = Astro.props
---

<div class={clsx('rounded-xl bg-mist-950/2.5 p-6 dark:bg-white/5', className)} {...props}>
  <div class="text-2xl/10 tracking-tight text-mist-950 dark:text-white">{stat}</div>
  <p class="mt-2 text-sm/7 text-mist-700 dark:text-mist-400">{text}</p>
</div>