---
import { clsx } from 'clsx/lite'
import Section from '../elements/section.astro'

const { img, name, byline, className, ...props } = Astro.props
---

<li class={clsx('flex flex-col gap-4 text-sm/7', className)} {...props}>
  <div class="flex aspect-3/4 w-full overflow-hidden rounded-sm outline -outline-offset-1 outline-black/5 *:object-cover dark:outline-white/5">
    {img}
  </div>
  <div>
    <p class="font-semibold text-mist-950 dark:text-white">{name}</p>
    <p class="text-mist-700 dark:text-mist-400">{byline}</p>
  </div>
</li>