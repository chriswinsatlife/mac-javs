---
import { clsx } from 'clsx/lite'
import Container from '../elements/container.astro'
import Subheading from '../elements/subheading.astro'
import Text from '../elements/text.astro'

const {
  headline,
  subheadline,
  cta,
  className,
  ...props
} = Astro.props
---

<section class={clsx('py-16', className)} {...props}>
  <Container class="flex flex-col items-center gap-10">
    <div class="flex flex-col gap-6">
      <Subheading class="max-w-4xl text-center">{headline}</Subheading>
      {subheadline && <Text class="flex max-w-3xl flex-col gap-4 text-center text-pretty"><Fragment set:html={subheadline} /></Text>}
    </div>
    {cta && <div set:html={cta} />}
  </Container>
</section>