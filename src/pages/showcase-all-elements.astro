---
import Base from '../layouts/Base.astro';

import AnnouncementBadge from '../../components/elements/announcement-badge.astro'
import ButtonLink from '../../components/elements/button-link.astro'
import Button from '../../components/elements/button.astro'
import Container from '../../components/elements/container.astro'
import EmailSignupForm from '../../components/elements/email-signup-form.astro'
import Eyebrow from '../../components/elements/eyebrow.astro'
import Heading from '../../components/elements/heading.astro'
import InstallCommand from '../../components/elements/install-command.astro'
import Link from '../../components/elements/link.astro'
import LogoGrid from '../../components/elements/logo-grid.astro'
import Main from '../../components/elements/main.astro'
import PlainButtonLink from '../../components/elements/plain-button-link.astro'
import PlainButton from '../../components/elements/plain-button.astro'
import Screenshot from '../../components/elements/screenshot.astro'
import Section from '../../components/elements/section.astro'
import SoftButtonLink from '../../components/elements/soft-button-link.astro'
import SoftButton from '../../components/elements/soft-button.astro'
import Subheading from '../../components/elements/subheading.astro'
import Text from '../../components/elements/text.astro'
import Wallpaper from '../../components/elements/wallpaper.astro'

const elements = [
  AnnouncementBadge,
  ButtonLink,
  Button,
  Container,
  EmailSignupForm,
  Eyebrow,
  Heading,
  InstallCommand,
  Link,
  LogoGrid,
  Main,
  PlainButtonLink,
  PlainButton,
  Screenshot,
  Section,
  SoftButtonLink,
  SoftButton,
  Subheading,
  Text,
  Wallpaper,
]
---
<Base title="All Elements Components">
  <div class="p-8 bg-gradient-to-br from-slate-50 to-slate-100 min-h-screen dark:from-slate-900 dark:to-slate-800">
    <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-8">
      All 20 Elements Components
    </h1>
    <div class="grid gap-6">
      {elements.map((Component) => (
        <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-lg">
          <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-4 pb-2 border-b border-slate-200 dark:border-slate-700">
            {Component.name}
          </h2>
          <div class="bg-blue-50 dark:bg-blue-900/30 rounded p-4">
            <Component />
          </div>
        </div>
      ))}
    </div>
  </div>
</Base>