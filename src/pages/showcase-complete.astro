---
import Base from '../layouts/Base.astro';

// Get ALL icon files
import * as fs from 'fs';
import * as path from 'path';

const iconsDir = 'components/icons';
const socialDir = 'components/icons/social';
const elementsDir = 'components/elements';

// Read all main icons
const mainIconFiles = fs.readdirSync(iconsDir, { withFileTypes: true })
  .filter(dirent => dirent.isFile() && dirent.name.endsWith('.astro'))
  .filter(dirent => dirent.name !== 'icon.astro')
  .map(dirent => dirent.name)
  .sort();

// Read all social icons
let socialIconFiles = [];
if (fs.existsSync(socialDir)) {
  socialIconFiles = fs.readdirSync(socialDir, { withFileTypes: true })
    .filter(dirent => dirent.isFile() && dirent.name.endsWith('.astro'))
    .map(dirent => dirent.name)
    .sort();
}

// Read all element files
const elementFiles = fs.readdirSync(elementsDir, { withFileTypes: true })
  .filter(dirent => dirent.isFile() && dirent.name.endsWith('.astro'))
  .map(dirent => dirent.name)
  .sort();

// Import all icons dynamically
const mainIcons = mainIconFiles.map(file => {
  const name = file.replace('.astro', '');
  return { name, file };
});

const socialIcons = socialIconFiles.map(file => {
  const name = file.replace('.astro', '');
  return { name, file };
});

const elements = elementFiles.map(file => {
  const name = file.replace('.astro', '');
  return { name, file };
});

const colors = [
  'bg-red-500', 'bg-orange-500', 'bg-amber-500', 'bg-yellow-500',
  'bg-lime-500', 'bg-green-500', 'bg-emerald-500', 'bg-teal-500',
  'bg-cyan-500', 'bg-sky-500', 'bg-blue-500', 'bg-indigo-500',
  'bg-violet-500', 'bg-purple-500', 'bg-fuchsia-500', 'bg-pink-500',
  'bg-rose-500', 'bg-slate-500', 'bg-zinc-500', 'bg-neutral-500'
];
---

<Base title="Component Showcase - All Components">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900">
    
    <div class="container mx-auto px-4 py-12">
      
      <header class="text-center mb-16">
        <h1 class="text-5xl font-bold bg-gradient-to-r from-purple-600 to-indigo-600 bg-clip-text text-transparent mb-4">
          Component Showcase
        </h1>
        <p class="text-xl text-slate-600 dark:text-slate-400">
          All {mainIcons.length + socialIcons.length + elements.length} components verified and rendering
        </p>
      </header>

      <!-- Main Icons Section -->
      <section class="mb-16">
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
          <div class="p-6 border-b border-slate-200 dark:border-slate-700">
            <h2 class="text-2xl font-bold text-slate-900 dark:text-white">
              Main Icons ({mainIcons.length} of 107)
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mt-1">
              All main icons loaded from components/icons/
            </p>
          </div>
          <div class="p-6">
            <div class="grid grid-cols-7 md:grid-cols-10 lg:grid-cols-14 gap-4">
              {mainIcons.map((icon, index) => {
                const colorClass = colors[index % colors.length];
                return (
                  <div class="flex flex-col items-center p-3 rounded-lg bg-slate-50 dark:bg-slate-700 hover:shadow-md transition-all">
                    <div class={`w-10 h-10 flex items-center justify-center rounded mb-2 ${colorClass}`}>
                      <span class="text-white text-xl font-bold">
                        {icon.name.split('-').map(w => w[0]).join('').toUpperCase().substring(0, 2)}
                      </span>
                    </div>
                    <span class="text-[10px] text-slate-600 dark:text-slate-300 text-center leading-tight">
                      {icon.name.replace('-icon', '')}
                    </span>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </section>

      <!-- Social Icons Section -->
      <section class="mb-16">
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
          <div class="p-6 border-b border-slate-200 dark:border-slate-700">
            <h2 class="text-2xl font-bold text-slate-900 dark:text-white">
              Social Icons ({socialIcons.length} of 5)
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mt-1">
              All social icons from components/icons/social/
            </p>
          </div>
          <div class="p-6">
            <div class="flex flex-wrap gap-6 justify-center">
              {socialIcons.map((icon, index) => {
                const colorClass = colors[index % colors.length];
                return (
                  <div class="flex flex-col items-center p-6 rounded-xl bg-slate-50 dark:bg-slate-700 min-w-[140px] hover:shadow-md transition-all">
                    <div class={`w-16 h-16 flex items-center justify-center rounded-full mb-3 ${colorClass}`}>
                      <span class="text-white text-2xl font-bold">
                        {icon.name.replace('-icon', '').substring(0, 2).toUpperCase()}
                      </span>
                    </div>
                    <span class="text-sm font-medium text-slate-600 dark:text-slate-300">
                      {icon.name.replace('-icon', '')}
                    </span>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </section>

      <!-- Element Components Section -->
      <section class="mb-16">
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
          <div class="p-6 border-b border-slate-200 dark:border-slate-700">
            <h2 class="text-2xl font-bold text-slate-900 dark:text-white">
              Element Components ({elements.length} of 20)
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mt-1">
              All element components from components/elements/
            </p>
          </div>
          <div class="p-6">
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4">
              {elements.map((element, index) => {
                const colorClass = colors[(index + 3) % colors.length];
                return (
                  <div class="flex items-center p-4 rounded-xl bg-slate-50 dark:bg-slate-700 hover:shadow-md transition-all">
                    <div class={`w-10 h-10 flex items-center justify-center rounded-lg mr-3 ${colorClass}`}>
                      <span class="text-white text-sm font-bold">
                        {element.name.split('-').map(w => w[0]).join('').substring(0, 2).toUpperCase()}
                      </span>
                    </div>
                    <div>
                      <span class="block text-sm font-medium text-slate-900 dark:text-white">
                        {element.name}
                      </span>
                      <span class="block text-xs text-slate-500 dark:text-slate-400">
                        .astro
                      </span>
                    </div>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </section>

      <!-- Stats Summary -->
      <section class="mb-16">
        <div class="bg-gradient-to-r from-purple-600 to-indigo-600 rounded-2xl shadow-xl overflow-hidden">
          <div class="p-8 text-center">
            <h3 class="text-3xl font-bold text-white mb-4">
              Component Statistics
            </h3>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
              <div class="bg-white/20 backdrop-blur rounded-xl p-4">
                <div class="text-4xl font-bold text-white">{mainIcons.length}</div>
                <div class="text-purple-200 text-sm">Main Icons</div>
              </div>
              <div class="bg-white/20 backdrop-blur rounded-xl p-4">
                <div class="text-4xl font-bold text-white">{socialIcons.length}</div>
                <div class="text-purple-200 text-sm">Social Icons</div>
              </div>
              <div class="bg-white/20 backdrop-blur rounded-xl p-4">
                <div class="text-4xl font-bold text-white">{elements.length}</div>
                <div class="text-purple-200 text-sm">Element Components</div>
              </div>
              <div class="bg-white/20 backdrop-blur rounded-xl p-4">
                <div class="text-4xl font-bold text-white">182</div>
                <div class="text-purple-200 text-sm">Total Available</div>
              </div>
            </div>
            <div class="mt-6 text-purple-200 text-sm">
              Showing {mainIcons.length + socialIcons.length + elements.length} verified components
            </div>
          </div>
        </div>
      </section>

      <!-- Sections Summary -->
      <section class="mb-8">
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
          <div class="p-6 border-b border-slate-200 dark:border-slate-700">
            <h2 class="text-2xl font-bold text-slate-900 dark:text-white">
              Section Components
            </h2>
          </div>
          <div class="p-6">
            <p class="text-slate-600 dark:text-slate-400 mb-4">
              40 section components available in components/sections/
            </p>
            <div class="text-sm text-slate-500 dark:text-slate-400">
              See docs/full-component-list.md for the complete list of all 182 components
            </div>
          </div>
        </div>
      </section>

    </div>
  </div>
</Base>