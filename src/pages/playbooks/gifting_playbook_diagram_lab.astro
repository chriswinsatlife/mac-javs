---
import Base from '../../layouts/Base.astro'
import FlowDiagram from '@components/playbooks/flow_diagram_client.astro'
---

<Base title="Gifting Diagram Lab">
  <div class="min-h-screen bg-base-200">
    <main class="mx-auto max-w-7xl px-6 py-10">
      <header class="mb-8">
        <h1 class="font-display text-4xl tracking-tight text-base-content">Gifting diagram lab</h1>
        <p class="mt-3 max-w-3xl text-base leading-relaxed text-base-content/70">
          Side-by-side presets for node typography and wrapping.
        </p>
      </header>

      <div class="grid gap-6 lg:grid-cols-2">
        <section class="rounded-2xl border border-base-300 bg-base-100 shadow-sm">
          <div class="border-b border-base-200 px-5 py-4">
            <div class="text-sm font-semibold text-base-content">Default</div>
            <div class="text-sm text-base-content/60">3-line clamp, bigger nodes</div>
          </div>
          <div class="p-4">
            <FlowDiagram
              id="gift-setup-default"
              dataUrl="/diagrams/gifting_playbook_flow/setup.json"
              height={320}
              maxLines={4}
              cssHref="/diagrams/gifting_playbook_flow/runtime.css"
            />
          </div>
        </section>

        <section class="rounded-2xl border border-base-300 bg-base-100 shadow-sm">
          <div class="border-b border-base-200 px-5 py-4">
            <div class="text-sm font-semibold text-base-content">Readable</div>
            <div class="text-sm text-base-content/60">Even more wrapping</div>
          </div>
          <div class="p-4">
            <FlowDiagram
              id="gift-setup-readable"
              dataUrl="/diagrams/gifting_playbook_flow/setup.json"
              height={320}
              maxLines={4}
              cssHref="/diagrams/gifting_playbook_flow/runtime_readable.css"
            />
          </div>
        </section>
      </div>

      <div class="mt-10 rounded-2xl border border-base-300 bg-base-100 shadow-sm">
        <div class="border-b border-base-200 px-5 py-4">
          <div class="text-sm font-semibold text-base-content">Rich node content</div>
          <div class="text-sm text-base-content/60">Icon + headline + body + footer</div>
        </div>
        <div class="p-4">
          <FlowDiagram
            id="gift-rich"
            dataUrl="/diagrams/gifting_playbook_flow/lab_rich.json"
            height={360}
            maxLines={4}
            cssHref="/diagrams/gifting_playbook_flow/runtime.css"
            iconSet="athena"
            iconBasePath="/diagrams/icon_sets"
            iconMode="inline"
          />
        </div>
      </div>
    </main>
  </div>
</Base>
