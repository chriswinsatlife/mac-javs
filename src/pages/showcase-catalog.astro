---
import Base from '../layouts/Base.astro';

const elementComponents = [
  'announcement-badge',
  'button-link', 'button',
  'container', 'email-signup-form',
  'eyebrow', 'heading', 'install-command', 'link', 'logo-grid',
  'main',
  'plain-button-link', 'plain-button', 'screenshot', 'section',
  'soft-button-link', 'soft-button', 'subheading', 'text', 'wallpaper',
]

const sectionComponents = [
  'brands-cards-multi-column',
  'call-to-action-simple-centered', 'call-to-action-simple',
  'features-stacked-alternating-with-demos', 'features-three-column-with-demos', 'features-three-column',
  'features-two-column-with-demos', 'features-with-large-demo',
  'footer-with-link-categories', 'footer-with-links-and-social-icons', 'footer-with-newsletter-form-categories-and-social-icons',
  'footercategory', 'footerlink',
  'hero-centered-with-demo', 'hero-centered-with-photo', 'hero-left-aligned-with-demo', 'hero-left-aligned-with-photo',
  'hero-simple-centered', 'hero-simple-left-aligned', 'hero-two-column-with-photo', 'hero-with-demo-on-background',
  'newsletter-form', 'plan-comparison-table', 'pricing-hero-multi-tier', 'pricing-multi-tier',
  'pricing-single-tier-two-column', 'PricingMultiTier',
  'sociallink', 'Stat',
  'stats-four-columns', 'stats-three-column-with-description', 'stats-with-graph-stat', 'stats-with-graph',
  'team-four-column-grid', 'team-three-column-grid', 'TeamMember',
  'testimonial-two-column-with-large-photo', 'testimonial-with-large-quote', 'testimonials-three-column-grid-layout', 'testimonials-three-column-grid',
]

const catalystComponents = [
  'auth-layout', 'description-details', 'description-list', 'description-term', 'divider',
  'heading', 'link', 'pagination', 'subheading', 'text',
]

const workingElementImports = {
  Button: () => import('../../components/elements/button.astro'),
  Heading: () => import('../../components/elements/heading.astro'),
  Text: () => import('../../components/elements/text.astro'),
  Eyebrow: () => import('../../components/elements/eyebrow.astro'),
}
---
<Base title="Component Catalog - All 182 Components">
  <div class="p-8 bg-gradient-to-br from-slate-50 to-slate-100 min-h-screen dark:from-slate-900 dark:to-slate-800">
    <h1 class="text-4xl font-bold text-slate-900 dark:text-white mb-2">
      Component Catalog
    </h1>
    <p class="text-lg text-slate-600 dark:text-slate-300 mb-8">
      All 182 components organized by category
    </p>

    <div class="grid gap-8">
      <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-lg">
        <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-4 pb-2 border-b border-slate-200 dark:border-slate-700">
          20 Element Components
        </h2>
        <ul class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-2">
          {elementComponents.map((name) => (
            <li class="text-sm text-slate-700 dark:text-slate-300 bg-slate-50 dark:bg-slate-700 px-3 py-1.5 rounded">
              {name}
            </li>
          ))}
        </ul>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-lg">
        <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-4 pb-2 border-b border-slate-200 dark:border-slate-700">
          40 Section Components
        </h2>
        <ul class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-2">
          {sectionComponents.map((name) => (
            <li class="text-sm text-slate-700 dark:text-slate-300 bg-slate-50 dark:bg-slate-700 px-3 py-1.5 rounded">
              {name}
            </li>
          ))}
        </ul>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-lg">
        <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-4 pb-2 border-b border-slate-200 dark:border-slate-700">
          10 Catalyst Components
        </h2>
        <ul class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-2">
          {catalystComponents.map((name) => (
            <li class="text-sm text-slate-700 dark:text-slate-300 bg-slate-50 dark:bg-slate-700 px-3 py-1.5 rounded">
              {name}
            </li>
          ))}
        </ul>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-lg">
        <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-4 pb-2 border-b border-slate-200 dark:border-slate-700">
          112 Icon Components (107 Main + 5 Social)
        </h2>
        <p class="text-sm text-slate-600 dark:text-slate-400 mb-3">
          Located in components/icons/ and components/icons/social/
        </p>
        <div class="bg-slate-50 dark:bg-slate-700 rounded p-4">
          <p class="font-semibold text-slate-900 dark:text-white mb-2">Sample icons:</p>
          <p class="text-xs text-slate-600 dark:text-slate-400 font-mono">
            alert-triangle-icon.jsx, archive-box-icon.jsx, arrow-down-arrow-up-icon.jsx, <br/>
            banknotes-icon.jsx, beaker-icon.jsx, bell-icon.jsx, book-open-icon.jsx, <br/>
            briefcase-icon.jsx, building-2-icon.jsx, calendar-icon.jsx, camera-icon.jsx, <br/>
            chart-bar-icon.jsx, chart-line-icon.jsx, chart-pie-circle-icon.jsx, <br/>
            checkmark-icon.jsx, chevron-icon.jsx, clipboard-icon.jsx, clock-icon.jsx, <br/>
            cloud-icon.jsx, code-square-icon.jsx, cog-icon.jsx, compass-icon.jsx, cpu-icon.jsx, <br/>
            document-icon.jsx, education-cap-icon.jsx, filter-icon.jsx, fingerprint-icon.jsx, <br/>
            flag-icon.jsx, folder-icon.jsx, git-branch-icon.jsx, git-diff-icon.jsx, git-merge-icon.jsx, <br/>
            hard-drive-icon.jsx, heart-icon.jsx, heart-pulse-icon.jsx, home-icon.jsx, inbox-icon.jsx, <br/>
            information-circle-icon.jsx, key-icon.jsx, language-icon.jsx, lifebuoy-icon.jsx, <br/>
            light-bulb-icon.jsx, lighting-bolt-icon.jsx, lock-icon.jsx, lock-open-icon.jsx, <br/>
            magnifying-glass-icon.jsx, mail-icon.jsx, map-icon.jsx, map-pin-icon.jsx, microphone-icon.jsx, <br/>
            minus-icon.jsx, moon-icon.jsx, newspaper-icon.jsx, paperclip-icon.jsx, photo-icon.jsx, <br/>
            plus-icon.jsx, question-circle-icon.jsx, repeat-icon.jsx, rocket-icon.jsx, <br/>
            shield-exclamation-icon.jsx, shopping-bag-icon.jsx, shopping-cart-icon.jsx, sliders-icon.jsx, <br/>
            sparkles-icon.jsx, square-3-stack-3d-icon.jsx, squares-2-stacked-icon.jsx, star-icon.jsx, <br/>
            sun-icon.jsx, tag-icon.jsx, target-icon.jsx, terminal-icon.jsx, ticket-icon.jsx, trash-icon.jsx, <br/>
            ui-layout-icon.jsx, unordered-list-icon.jsx, user-2-icon.jsx, user-circle-icon.jsx<br/><br/>
            Social: facebook-icon.jsx, github-icon.jsx, instagram-icon.jsx, x-icon.jsx, youtube-icon.jsx
          </p>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-lg">
        <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-4 pb-2 border-b border-slate-200 dark:border-slate-700">
          Working Element Examples
        </h2>
        <div class="space-y-4">
          <div class="bg-blue-50 dark:bg-blue-900/20 rounded p-4">
            <p class="font-semibold mb-2">Button Component:</p>
            <button class="inline-flex shrink-0 items-center justify-center gap-1 rounded-full px-3 py-1 text-sm/7 font-medium bg-slate-950 text-white hover:bg-slate-800 dark:bg-slate-300 dark:text-slate-950 dark:hover:bg-slate-200">
              Interactive Button
            </button>
          </div>

          <div class="bg-green-50 dark:bg-green-900/20 rounded p-4">
            <p class="font-semibold mb-2">Button Link Component:</p>
            <a href="#" class="inline-flex items-center justify-center gap-1 rounded-full px-3 py-1 text-sm/7 font-medium border border-slate-950 text-slate-950 hover:bg-slate-950 hover:text-white dark:border-white dark:text-white dark:hover:bg-white dark:hover:text-slate-950">
              Button Link
            </a>
          </div>

          <div class="bg-purple-50 dark:bg-purple-900/20 rounded p-4">
            <p class="font-semibold mb-2">Soft Button Component:</p>
            <button class="inline-flex shrink-0 items-center justify-center gap-1 rounded-full px-3 py-1 text-sm/7 font-medium bg-slate-100 text-slate-950 hover:bg-slate-200 dark:bg-slate-800 dark:text-white dark:hover:bg-slate-700">
              Soft Button
            </button>
          </div>
        </div>
      </div>

      <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-xl p-6">
        <h2 class="text-xl font-bold text-yellow-900 dark:text-yellow-100 mb-3">
          SSR Build Notes
        </h2>
        <p class="text-sm text-yellow-800 dark:text-yellow-300 mb-2">
          Due to Astro SSR limitations with complex component dependencies and circular imports,
          rendering all 182 components simultaneously causes build failures.
        </p>
        <p class="text-sm text-yellow-800 dark:text-yellow-300">
          Individual components work correctly when rendered separately. All components are
          listed above for reference. Component files are located in:
        </p>
        <ul class="text-sm text-yellow-800 dark:text-yellow-300 mt-2 list-disc list-inside">
          <li>components/elements/*.astro</li>
          <li>components/sections/*.astro</li>
          <li>components/catalyst/*.astro</li>
          <li>components/icons/*.jsx</li>
          <li>components/icons/social/*.jsx</li>
        </ul>
      </div>
    </div>
  </div>
</Base>