---
import Base from '../layouts/Base.astro';

import AnnouncementBadge from '../../components/elements/announcement-badge.astro'
import Button from '../../components/elements/button.astro'
import ButtonLink from '../../components/elements/button-link.astro'
import Container from '../../components/elements/container.astro'
import Eyebrow from '../../components/elements/eyebrow.astro'
import Heading from '../../components/elements/heading.astro'
import Link from '../../components/elements/link.astro'
import LogoGrid from '../../components/elements/logo-grid.astro'
import Main from '../../components/elements/main.astro'
import PlainButtonLink from '../../components/elements/plain-button-link.astro'
import PlainButton from '../../components/elements/plain-button.astro'
import SoftButtonLink from '../../components/elements/soft-button-link.astro'
import SoftButton from '../../components/elements/soft-button.astro'
import Subheading from '../../components/elements/subheading.astro'
import Text from '../../components/elements/text.astro'
---

<Base title="Showcase - Elements Only">
  <div class="p-8 bg-gradient-to-br from-slate-50 to-slate-100 min-h-screen dark:from-slate-900 dark:to-slate-800">
    <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-8">
      Component Showcase - All 20 Element Components
    </h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">AnnouncementBadge</h3>
        <AnnouncementBadge text="New feature!" href="#" cta="Learn more" />
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Button</h3>
        <Button>Standard Button</Button>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">ButtonLink</h3>
        <ButtonLink href="#">Button Link</ButtonLink>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">PlainButton</h3>
        <PlainButton>Plain Button</PlainButton>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">SoftButton</h3>
        <SoftButton>Soft Button</SoftButton>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">PlainButtonLink</h3>
        <PlainButtonLink href="#">Plain Button Link</PlainButtonLink>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">SoftButtonLink</h3>
        <SoftButtonLink href="#">Soft Button Link</SoftButtonLink>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Heading</h3>
        <Heading>Main Heading</Heading>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Subheading</h3>
        <Subheading>Section Subheading</Subheading>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Eyebrow</h3>
        <Eyebrow>CATEGORY</Eyebrow>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Text</h3>
        <Text>Body text content</Text>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Link</h3>
        <Link href="#">Regular Link</Link>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">LogoGrid</h3>
        <LogoGrid logotype={['Logo 1', 'Logo 2', 'Logo 3']} />
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Container</h3>
        <Container>
          <Text>Container content</Text>
        </Container>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Main</h3>
        <Main>
          <Heading>Main content area</Heading>
        </Main>
      </div>

      <section class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">EmailSignupForm</h3>
        {
          (() => {
            try {
              const EmailSignupForm = import('../../components/elements/email-signup-form.astro')
              return '<p class="text-slate-500">EmailSignupForm loaded</p>'
            } catch (e) {
              return '<div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded p-4 text-red-700 dark:text-red-300">Component EmailSignupForm failed to load</div>'
            }
          })()
        }
      </section>

      <section class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">InstallCommand</h3>
        {
          (() => {
            try {
              const InstallCommand = import('../../components/elements/install-command.astro')
              return '<p class="text-slate-500">InstallCommand loaded</p>'
            } catch (e) {
              return '<div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded p-4 text-red-700 dark:text-red-300">Component InstallCommand failed to load</div>'
            }
          })()
        }
      </section>

      <section class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Screenshot</h3>
        {
          (() => {
            try {
              const Screenshot = import('../../components/elements/screenshot.astro')
              return '<p class="text-slate-500">Screenshot loaded</p>'
            } catch (e) {
              return '<div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded p-4 text-red-700 dark:text-red-300">Component Screenshot failed to load</div>'
            }
          })()
        }
      </section>

      <section class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Section</h3>
        {
          (() => {
            try {
              const Section = import('../../components/elements/section.astro')
              return '<p class="text-slate-500">Section loaded</p>'
            } catch (e) {
              return '<div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded p-4 text-red-700 dark:text-red-300">Component Section failed to load</div>'
            }
          })()
        }
      </section>

      <section class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Wallpaper</h3>
        {
          (() => {
            try {
              const Wallpaper = import('../../components/elements/wallpaper.astro')
              return '<p class="text-slate-500">Wallpaper loaded</p>'
            } catch (e) {
              return '<div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded p-4 text-red-700 dark:text-red-300">Component Wallpaper failed to load</div>'
            }
          })()
        }
      </section>

    </div>
  </div>
</Base>