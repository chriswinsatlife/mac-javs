---
import Base from '../layouts/Base.astro';

import Button from '../../components/elements/button.astro'
import Heading from '../../components/elements/heading.astro'
import Text from '../../components/elements/text.astro'
import Eyebrow from '../../components/elements/eyebrow.astro'
import Link from '../../components/elements/link.astro'
import ButtonLink from '../../components/elements/button-link.astro'
---

<Base title="Showcase - Elements Only">
  <div class="p-8 bg-gradient-to-br from-slate-50 to-slate-100 min-h-screen dark:from-slate-900 dark:to-slate-800">
    <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-8">
      Component Showcase - Elements Only
    </h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Button</h3>
        <Button>Click me</Button>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Heading</h3>
        <Heading>Heading Component</Heading>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Text</h3>
        <Text>This is the Text component for body content</Text>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Eyebrow</h3>
        <Eyebrow>EYEBROW</Eyebrow>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Link</h3>
        <Link href="#">Visit link</Link>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 border border-slate-200 dark:border-slate-700">
        <h3 class="text-sm font-semibold text-slate-500 dark:text-slate-400 mb-4">Button Link</h3>
        <ButtonLink href="#">Button Link</ButtonLink>
      </div>

    </div>
  </div>
</Base>